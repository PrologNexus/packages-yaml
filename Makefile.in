PACKAGE=yaml
DOC=yaml
include ../Makefile.defs
CFLAGS+= -I. @CIFLAGS@
# COFLAGS=-gdwarf-2 -g3

LIBPL=		@PLTARGETS@
TARGETS=	@TARGETS@
LIBS=		@LIBS@

YAMLOBJ=	yaml4pl.o

all:		$(TARGETS)

yaml4pl.@SO@:	$(YAMLOBJ)
		$(LD) $(LDSOFLAGS) -o $@ $(YAMLOBJ) $(LIBS) $(LIBPLSO)

install:	$(TARGETS) $(LIBPL)
		mkdir -p $(DESTDIR)$(SOLIBDIR)
		for f in $(TARGETS); do \
		  $(INSTALL_PROGRAM) $$f $(DESTDIR)$(SOLIBDIR); \
		done
		mkdir -p $(DESTDIR)$(PLBASE)/library
		for f in $(LIBPL); do \
		  $(INSTALL_DATA) $$f $(DESTDIR)$(PLBASE)/library; \
		done
		$(MKINDEX)

ln-install::
		$(MAKE) INSTALL_DATA="../ln-install" INSTALL_PROGRAM="../ln-install" install

rpm-install:	install

html-install::
		mkdir -p $(DESTDIR)$(PKGDOCDIR)
		$(INSTALL) -m 644 $(DOC).html $(DESTDIR)$(PKGDOCDIR)

pdf-install::
		mkdir -p $(DESTDIR)$(PKGDOCDIR)
		$(INSTALL) -m 644 $(DOC).pdf $(DESTDIR)$(PKGDOCDIR)

uninstall::
		(cd $(SOLIBDIR) && rm -f $(TARGETS))
		(cd $(PLBASE)/library && rm -f $(LIBPL))
		$(MKINDEX)

################################################################
# Testing
################################################################

check::
		$(PL) -f test_yaml.pl -F none -g test_yaml -t halt

################################################################
# Documentation
################################################################

TEXEXTRA=	libyaml.tex
$(TEX):         $(TEXEXTRA)

libyaml.tex:	yaml.pl
		$(PLTOTEX) --section --out=libyaml $<

################################################################
# Clean
################################################################

clean:
		rm -f $(RLOBJ) *~ *.o *% a.out core config.log

distclean:	clean
		rm -f $(TARGETS) config.cache config.h config.status Makefile
		rm -f $(DOC).aux $(DOC).log $(DOC).out $(DOC).toc
		rm -rf html
		rm -rf autom4te.cache
